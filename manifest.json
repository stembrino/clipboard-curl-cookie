{
    "manifest_version": 3,
    "name": "Clipboard Curl Cookie",
    "description": "Copy cookies to clipboard to use with some API tools",
    "version": "1.0",
    "permissions": [
      "cookies",
      "activeTab",
      "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/images/favicon.png"
      }
    }
  }